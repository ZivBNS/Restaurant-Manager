<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?> <?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootPane" alignment="CENTER" spacing="15.0"
	xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="gui.Customer_GUI">

	<children>
		<Label style="-fx-font-size: 18px; -fx-font-weight: bold;"
			text="Your Reservations" />
			
		<ListView fx:id="statusList" prefHeight="200.0"
			prefWidth="450.0" />
			
		<VBox spacing="10" alignment="CENTER">
            <DatePicker fx:id="datePicker" promptText="Select Date" maxWidth="200" editable="false" />
			
            <TextField fx:id="visitorsField"
				promptText="Visitors Count" maxWidth="200" />

			<Button text="Update Reservation"
				onAction="#onUpdateReservationClicked" />
		</VBox>
		
		<Button onAction="#onBackToCustomerClicked" text="Back" />
	</children>

</VBox>